              "applications/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Transaction"
                  }
                },
                "examples": {
                  "transacoes": {
                    "value": [
                      {
                        "id_transacao": 1,
                        "id_usuario": 1,
                        "id_tipos_transacao": "dizimo",
                        "valor": 100,
                        "date": 1696537708211
                      },
                      {
                        "id_transacao": 2,
                        "id_usuario": 1,
                        "id_tipos_transacao": "dizimo",
                        "valor": 150,
                        "date": 1696537708211
                      },
                      {
                        "id_transacao": 3,
                        "id_usuario": 1,
                        "id_tipos_transacao": "oferta",
                        "valor": 15,
                        "date": 1696537708211
