  "paths": {
    "transacao/{id_tipos_transacao}": {
      "get": {
        "summary": "Tipos de Transação - SCHEMA",
        "description": "",
        "tags": ["Transações - PARAMS"],
        "parameters": [
          {
            "name": "id_tipos_transacao",
            "in": "path",
            "description": "Tipo de transação",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["dizimo", "oferta"]
            }
          }
        ]
      }
    },
    "transacao/{id_tipos_transacao}/{id}": {
      "get": {
        "summary": "ID de transação relacionado ao tipo de transação - SCHEMA",
        "description": "",
        "tags": ["Transações - PARAMS"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id_tipos_transacao",
            "in": "path",
            "description": "Tipo de transação",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["dizimo", "oferta"]
            }
          },
          {
            "name": "id",
            "in": "path",
            "description": "id de uma transação",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ]
      }
    },
    "/cadastrar": {
      "post": {
        "summary": "Cadastro de Usuários",
        "description": "Essa rota será responsável por cadastrar um novo usuário",
        "tags": ["Usuários"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples": {
                "user-tobias": {
                  "value": {
                    "nome": "Tobias",
                    "email": "tobias@email.com",
                    "senha": "senhadotobias123",
                    "cargo": "membro"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/entrar": {
      "post": {
        "summary": "Entrada de Usuários",
        "description": "Essa rota será responsável por autenticar um usuário",
        "tags": ["Usuários"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "senha": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "user-tobias": {
                  "value": {
                    "email": "tobias@email.com",
                    "senha": "senhadotobias123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "401": {
            "description": "Email ou senha inválidos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "errors": {
                      "type": "object",
                      "properties": {
                        "default": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro ao gerar token de acesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "errors": {
                      "type": "object",
                      "properties": {
                        "default": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "200": {
            "description": "Usuário autenticado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "access_token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/transacao": {
