  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "nome": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "senha": {
            "type": "string"
          },
          "cargo": {
            "type": "string"
          }
        }
      },
      "Transaction": {
        "type": "object",
        "properties": {
          "id_transacao": {
            "type": "number"
          },
          "id_usuario": {
            "type": "number"
          },
          "id_tipos_transacao": {
            "$ref": "#/components/schemas/TransactionTypeENUM"
          },
          "valor": {
            "type": "number"
          },
          "date": {
            "type": "integer",
            "format": "int64",
            "description": "Timestamp em milissegundos representando a data da transação"
          }
        }
      },
      "TransactionTypeENUM": {
        "type": "string",
        "enum": ["dizimo", "oferta"],
        "description": "Enum para diferentes transações"
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
